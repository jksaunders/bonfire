{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "strictNullChecks": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}